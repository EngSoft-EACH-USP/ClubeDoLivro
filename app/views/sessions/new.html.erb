
    <div style="background-color: white; border:3px; margin-left: 95px; margin-right:95px; padding-left: 15px; padding-right: 15px;">
	<center>
<%= form_for :session, url: sign_in_path do |f| %>
    <div class="field" style="border: none !important;">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
    </br>
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
        </br>
    </div>
    <div class="actions" style="border: none !important;">
        <%= f.submit "Entrar" %>
    </div>
    <p>Ainda não tem uma conta? <%= link_to "Cadastre-se Agora!", new_user_path %></p>
    <div class="header">
       <center>O clube do livro é o local perfeito para você que quer recomendar uma boa leitura ou mesmo para compartilhar 
           interesses de livros</center>
    </div>
<% end %>
</center>
  </div>
 