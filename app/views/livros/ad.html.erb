<p id="notice"><%= notice %></p>

<h1>Meus anúncios</h1>
<% @livros.each do |livro| %>
<% end %>
<table border="1">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Autor</th>
      <th>Publicação</th>
      <th>ISBN</th>
      <th>Descrição</th>
      <th>Valor (R$) </th>
      <th colspan="3">Configuração</th>
    </tr>
  </thead>

  <tbody>
    <% @livros.each do |livro| %>
      <% if livro.owner.to_s.include? current_user.name %>
        <tr>
          <td><%= livro.nome %></td>
          <td><%= livro.autor %></td>
          <td><%= livro.publicacao %></td>
          <td><%= livro.isbn %></td>
          <td><%= livro.descricao %></td>
          <td><%= livro.valor %></td>
          <td><%= link_to 'Detalhes', livro %></td>
          <td><%= link_to 'Editar', edit_livro_path(livro) %></td>
          <td><%= link_to 'Apagar', livro, method: :delete, data: { confirm: 'Certeza que deseja fazer isso?' } %></td>
        </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

