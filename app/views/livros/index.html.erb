<p id="notice"><%= notice %></p>

<h1>Lista de Livros</h1>

<table border="1">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Autor</th>
      <th>Publicação</th>
      <th>ISBN</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @livros.each do |livro| %>
      <tr>
        <td><%= livro.nome %></td>
        <td><%= livro.autor %></td>
        <td><%= livro.publicacao %></td>
        <td><%= livro.isbn %></td>
        <td><%= livro.descricao %></td>
        <td><%= link_to 'Detalhes', livro %></td>
        <td><%= link_to 'Editar', edit_livro_path(livro) %></td>
        <td><%= link_to 'Apagar', livro, method: :delete, data: { confirm: 'Certeza que deseja fazer isso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar Livro', new_livro_path %>
<%= link_to 'Buscar Livro', buscar_path %>
